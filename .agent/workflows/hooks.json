{
  "description": "Maestro plugin hooks for AI memory (LTM) and Ralph Wiggum persistence (Antigravity Platform)",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"${AGENT_PLUGIN_ROOT}/.agent/workflows/session-start.js\""
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${AGENT_PLUGIN_ROOT}/.agent/workflows/pre-compact.js\""
          },
          {
            "type": "command",
            "command": "node \"${AGENT_PLUGIN_ROOT}/.agent/workflows/brain-sync.js\""
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo {}"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"${AGENT_PLUGIN_ROOT}/.agent/workflows/stop.js\""
          },
          {
            "type": "command",
            "command": "node \"${AGENT_PLUGIN_ROOT}/.agent/workflows/brain-sync.js\""
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${AGENT_PLUGIN_ROOT}/.agent/workflows/brain-sync.js\""
          }
        ]
      }
    ],
    "PostToolUseFailure": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${AGENT_PLUGIN_ROOT}/.agent/workflows/brain-sync.js\""
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"${AGENT_PLUGIN_ROOT}/.agent/workflows/brain-sync.js\""
          }
        ]
      }
    ]
  }
}